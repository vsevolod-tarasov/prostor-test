<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Prostor\CumDiscount\Api\ConfigInterface" type="Prostor\CumDiscount\Model\Config"/>
    <preference for="Prostor\CumDiscount\Api\ClientInterface" type="Prostor\CumDiscount\Model\CachedClient"/>
    <preference for="Prostor\CumDiscount\Api\Total\CalculatorInterface" type="Prostor\CumDiscount\Model\Quote\Totals\LoyaltyCalculator"/>

    <type name="Prostor\CumDiscount\Model\Logger\Handler\Warning">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/prostor_cumdiscount.log</argument>
        </arguments>
    </type>
    <virtualType name="Prostor\CumDiscount\Model\Logger\VirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">Prostor\CumDiscount\Model\Logger\Handler\Warning</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Prostor\CumDiscount\Client\Command\GetCustomerLoyaltyCumulative">
        <arguments>
            <argument name="logger" xsi:type="object">Prostor\CumDiscount\Model\Logger\VirtualLogger</argument>
        </arguments>
    </type>

    <type name="Prostor\CumDiscount\Model\CachedClient">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="loyalty_cumulative" xsi:type="object">Prostor\CumDiscount\Client\Command\GetCustomerLoyaltyCumulative</item>
            </argument>
        </arguments>
    </type>
    <type name="Prostor\CumDiscount\Model\Client\RequestCache">
        <arguments>
            <argument name="cachePoolIdentifier" xsi:type="string">redis</argument>
        </arguments>
    </type>
</config>
